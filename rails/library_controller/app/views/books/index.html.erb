<div class='books'>

  <h1>Books</h1>

  <ul>
    <% @books.each do |book| %>
      <div class='book-item'>
        <li><%= book.title %> by <%= book.author %></li>
        <%= button_to "delete", book_url(book), method: :delete %>
        <br>
      </div>
    <% end %>
  </ul>

  <%= render partial: "new" %>

</div>

